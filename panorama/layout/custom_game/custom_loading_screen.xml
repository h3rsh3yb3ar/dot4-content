<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>

	<Panel class="AddonLoadingRoot">
		<Panel id="CustomBg" >
			<Image id="bg" class="ProBg" src="file://{images}/custom_game/loading_screen/gamemode.png" />
		</Panel>

		<Panel class="dot4-social">
			
			<Panel class="dot4-social-title">
				<Label class="LabelMid" text="Got ideas? Wanna know when we are testing new features? Click below to join our Server!" style="" />
			</Panel>

			<Panel class="dot4-social-buttons">
				<Button id="dot4-social-button-discord-en" class="dot4-social-button"
					onactivate="DOTADisplayURL('https://discord.gg/zFU82bP');" />
			</Panel>
		</Panel>

		<Panel id="TitlePanel">
			<Label id="AddonTitle" class="LabelBig" text="DOT4" style="" />
		</Panel>
	</Panel>
</root>
